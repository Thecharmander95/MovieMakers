%h1
  %b Name:
  = @movie.name
%h3
  %b By:
  = @movie.author
%h4 Here is the things you can do with this movie
.grid-x
  .medium-3.cell
    %h5 Scenes
    %p= link_to 'New Scene', new_movie_scene_path(@movie), class: 'button'
    %p= link_to "Show Scenes", movie_scenes_path(@movie), class: "button"
  .medium-3.cell
    %h5 Pictures/video
    %p= link_to "Add Picture/video", new_movie_picturescene_path(@movie), class: "button"
    %p= link_to "Show Pictures/videos", movie_picturescenes_path(@movie), class: "button"
  .medium-3.cell
    %h5 Credits
    %p= link_to "Add someone to credits", new_movie_credit_path(@movie), class: "button"
    %p= link_to "List/Remove people from credits", movie_credits_path(@movie), class: "button"
  .medium-3.cell
    %h5 Movie Settings
    %p= link_to 'Edit Movie', edit_movie_path(@movie), class: "button"
    %p= link_to 'Delete Movie', @movie, 'data-turbo-method': :delete, data: { confirm: 'Are you sure? You did good! Why give up now?' }, class: "button"
    %p= link_to 'Back to Movies List', movies_path, class: "button"
