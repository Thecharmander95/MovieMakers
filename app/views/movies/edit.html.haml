.grid-x
  .medium-3.cell
  .medium-6.cell.space
    .callout.round
      %h1 Editing #{@movie.name}

      = form_for @movie do |f|
        - if @movie.errors.any?
          #error_explanation
            %h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
            %ul
              - @movie.errors.full_messages.each do |message|
                %li= message

        .field
          = f.label :name
          = f.text_field :name
        .field
          = f.label :Who_is_this_movie_by?
          (First and last Name or production team)
          = f.text_field :author
        .actions
          = f.submit 'Save', class: "button"
      = link_to 'Back To Movie', movie_path(@movie), class: "button"
